{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'config.edit.heading'|trans }}</h1>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">{{ form_row(form.name) }}</div>
                <div class="col-md-12">{{ form_row(form.value) }}</div>
                <div class="col-md-12">{{ form_row(form.save) }}</div>
            </div>
        </div>
    </div>
    {{ form_end(form, {render_rest: false}) }}
{% endblock %}
